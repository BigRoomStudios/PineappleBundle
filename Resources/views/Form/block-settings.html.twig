{% form_theme form 'BRSPineappleBundle:Form:block-settings-theme.html.twig' %}

{{ form_start(form) }}

	<div class="row actions">
		<div class="col-sm-8"><h3>Block Settings</h3></div>
		<div class="col-sm-4 text-right">
			<button class="btn btn-primary pineapple-save">Save</button>
			<button class="btn btn-info pineapple-settings-cancel">Cancel</button>
		</div>
	</div>
	<div class="row">
		<div class="col-md-{% if form.offsetExists('settings') and form.offsetGet('settings').offsetExists('media') %}9{% else %}12{% endif %}">
			
			<h4>Content</h4>
			
			{% if form.offsetExists('settings') and form.offsetGet('settings').offsetExists('content') %}
				{{ form_widget(form.settings.content) }}
			{% endif %}
			
		</div>
		
		{% if form.offsetExists('settings') and form.offsetGet('settings').offsetExists('media') %}
			<div class="col-md-3">
				<h4>Media</h4>
				{{ form_widget(form.settings.media) }}
				<h5>Title</h5>
				{{ form_widget(form.settings.media_title) }}
				<h5>Alt</h5>
				{{ form_widget(form.settings.media_alt) }}
			</div>
		{% endif %}
	</div>
	
	<div class="row">
		<div class="col-md-12">
			<h4>Additional Options</h4>
			{{ form_rest(form) }}
			</div>
	</div>
	
{{ form_end(form) }}