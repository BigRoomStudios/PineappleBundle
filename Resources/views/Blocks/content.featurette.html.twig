{% extends "BRSCoreBundle:Blocks:base.html.twig" %}

{% block block_content %}
<section>
  <div class="container">
    <div class="row featurette">
      {% if block.settings.flip=='y' %}
        <div class="col-md-5">
          {% if block.settings.media %}
            <img class="featurette-image img-responsive" class="media-thumb" src="{% path block.settings.media, 'big' %}">
          {% else %}
            <img class="featurette-image img-responsive" src="data:image/svg+xml;base64,">
          {% endif %}
        </div>
        <div class="col-md-7">{{block.settings.content|raw}}</div>
      {% else %}
        <div class="col-md-7">{{block.settings.content|raw}}</div>
        <div class="col-md-5">
          {% if block.settings.media %}
            <img class="featurette-image img-responsive" class="media-thumb" src="{% path block.settings.media, 'big' %}">
          {% else %}
            <img class="featurette-image img-responsive" src="data:image/svg+xml;base64,">
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>
</section>
{% endblock %}