{% extends "BRSCoreBundle:Blocks:base.html.twig" %}

{% block block_classes %}{{ parent() }}{% endblock %}

{% block block_content %}
  
  {#<pre>
    {{ dump(pineapples) }}
  </pre>#}
  
  <div class="pineapple-widget-category text-center">
    
    {% for cat in categories %}
      <div class="{% if cat == current_category %}active{% endif %} widget-category" data-cat="{{ cat }}">
        {{ cat }}
        <span class="expander">
          <i class="fa fa-minus-circle retract"></i>
          <i class="fa fa-plus-circle expand"></i>
        </span>
      </div>
    {% endfor %}
    
  </div>
  
  {% include 'BRSPineappleBundle:Pineapple:pineapples.html.twig' %}
  
  <script type="text/javascript">
    $(function() {
      Pineapple.broadcast('register_widget_pineapple_list');
    });
  </script>
  
{% endblock %}